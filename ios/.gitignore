name: Build iOS App

on:
  workflow_dispatch:
  push:
    branches: [main, master]

jobs:
  build-ios:
    runs-on: macos-latest
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '22'
          cache: 'npm'

      - name: Install Dependencies
        run: npm install --legacy-peer-deps

      - name: Build Web App
        run: npm run build

      - name: Capacitor Sync
        run: npx cap sync ios

      - name: Setup Xcode
        uses: maxim-lobanov/setup-xcode@v1
        with:
          xcode-version: latest-stable

      - name: Build iOS App (Unsigned via SPM)
        run: |
          cd ios/App
          # 因为你没有 Podfile，我们直接编译 .xcodeproj
          # Xcode 会自动通过 Swift Package Manager 下载依赖
          xcodebuild -project App.xcodeproj \
            -scheme App \
            -configuration Release \
            -destination 'generic/platform=iOS' \
            -derivedDataPath build \
            CODE_SIGN_IDENTITY="" \
            CODE_SIGNING_REQUIRED=NO \
            CODE_SIGNING_ALLOWED=NO \
            CODE_SIGN_ENTITLEMENTS="" \
            DEVELOPMENT_TEAM="" \
            -archivePath build/App.xcarchive \
            archive

      - name: Extract .app and Zip
        run: |
          # 创建输出目录
          mkdir -p payload_dir/Payload
          
          # 寻找生成的 .app 文件
          APP_PATH=$(find ios/App/build -name "App.app" -type d | head -1)
          
          if [ -d "$APP_PATH" ]; then
            echo "Found App at $APP_PATH"
            cp -r "$APP_PATH" payload_dir/Payload/
            cd payload_dir
            zip -r ../WhatToEatToday-unsigned.ipa Payload
            cd ..
            echo "IPA created successfully"
          else
            echo "Error: App.app not found"
            find ios/App/build -name "*.app"
            exit 1
          fi

      - name: Upload Artifact
        uses: actions/upload-artifact@v4
        with:
          name: ios-ipa-unsigned
          path: WhatToEatToday-unsigned.ipa
          retention-days: 7