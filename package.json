{
  "name": "what-to-eat-today",
  "version": "1.0.0",
  "description": "今天吃什么 - 解决选择困难症",
  "private": true,
  "scripts": {
    "dev": "vite",
    "dev:network": "vite --host 0.0.0.0",
    "dev:tunnel": "node scripts/start-tunnel.js",
    "dev:ngrok": "node scripts/start-ngrok.js",
    "dev:cloudflare": "node scripts/start-cloudflare.js",
    "build": "vite build",
    "preview": "vite preview --host 0.0.0.0",
    "preview:tunnel": "npm run build && node scripts/start-tunnel.js --preview",
    "deploy:cloudflare": "node scripts/deploy-cloudflare.js",
    "cap:sync": "cap sync",
    "cap:sync:ios": "cap sync ios",
    "cap:sync:android": "cap sync android",
    "cap:add:android": "cap add android",
    "cap:open:android": "cap open android",
    "cap:open:ios": "cap open ios",
    "android:build": "npm run build && npx cap sync android",
    "android:open": "npx cap open android",
    "ios:build": "npm run build && npx cap sync ios",
    "ios:preview:setup": "node scripts/setup-ios-preview.js"
  },
  "dependencies": {
    "@capacitor/android": "^8.0.1",
    "@capacitor/cli": "^8.0.1",
    "@capacitor/core": "^8.0.1",
    "@capacitor/ios": "^8.0.1",
    "@supabase/supabase-js": "^2.91.0",
    "framer-motion": "^10.16.4",
    "i18next": "^25.8.0",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-http-backend": "^3.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^16.5.3"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "gh-pages": "^6.3.0",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.9.3",
    "vite": "^5.0.0"
  }
}
